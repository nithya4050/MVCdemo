@model IEnumerable<MVCDemo.Models.Student>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


   

@{
    Layout = "_Layout1";
}

@{ 
    @ViewData["Welcome"]
}


<h1>@ViewData["Welcome"]</h1>
<h2>@Localizer["Welcome"]</h2>


    
<form method="post" asp-controller="Home" asp-action="ChangeLanguage">
    <label>Select Language:</label>
    <select name="culture">
        <option value="en_IN">English</option>
        <option value="ta_IN">Tamil</option>
    </select>
    <button type="submit">Change</button>
</form>

 <div class="container mt-5">
    <div class="row">


         @{
                    foreach (var item in Model)
                    {
        <div class="col-sm-4">
            <div class="card" style="width:400px">
               
                        
                         <img class="card-img-top" src="@item.Profilepicture" alt="Card image">
